<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primary_color"
    android:padding="32dp">

    <!-- App Logo Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">
        
        <!-- App Icon Placeholder -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="https://placehold.co/120x120?text=Mobile+Network+Field+Test+App+Logo"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle_background"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:contentDescription="App Logo" />
        
        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        
        <!-- App Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Network Testing Tool"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:gravity="center" />
    </LinearLayout>

    <!-- Loading Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp">
        
        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="@color/white" />
        
        <!-- Loading Text -->
        <TextView
            android:id="@+id/tvLoadingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checking_sim"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:alpha="0.9" />
    </LinearLayout>

    <!-- Version Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="64dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.7" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Mobile Network Solutions"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:alpha="0.6"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>